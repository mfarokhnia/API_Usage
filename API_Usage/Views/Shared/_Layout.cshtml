<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - IEX Trading Market Data</title>
  <link rel="stylesheet" href="~/css/site.css" />
  @*<script type="text/javascript" src="~/js/Chart.min.js"></script>*@
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>
  <script type="text/javascript" src="~/lib/chartjs-plugin-annotation-master/chartjs-plugin-annotation.min.js"></script>
  <script type="text/javascript" src="~/js/site.js"></script>
    <style>
        /*style the active selected tab*/
        .active {
            background-color: blue;
            color: white;
        }
    </style>
</head>
<body>
    <!-- This section provides a running price of tops stocks. data is provided by Trading View -->
    <div class="tradingview-widget-container">
        <div class="tradingview-widget-container__widget"></div>
        <div class="tradingview-widget-copyright"><a href="https://www.tradingview.com" rel="noopener" target="_blank"><span class="blue-text"></span></a> </div>
        <script type="text/javascript" src="https://s3.tradingview.com/external-embedding/embed-widget-tickers.js" async>
            {
                "symbols": [

                    {
                        "title": "Shanghai Composite",
                        "proName": "INDEX:XLY0"
                    },
                    {
                        "title": "EUR/USD",
                        "proName": "FX_IDC:EURUSD"
                    },
                    {
                        "title": "BTC/USD",
                        "proName": "BITFINEX:BTCUSD"
                    },
                    {
                        "title": "ETH/USD",
                        "proName": "BITFINEX:ETHUSD"
                    },
                    {
                        "description": "AAP",
                        "proName": "NYSE:AAP"
                    },
                    {
                        "description": "Microsoft",
                        "proName": "NASDAQ:MSFT"
                    },
                    {
                        "description": "Amazon",
                        "proName": "NASDAQ:AMZN"
                    }
                ],
                                "locale": "en"
            }
        </script>
    </div>
    <!-- TradingView Widget END -->
    <nav>
        <div class="nav-bar">
            <a asp-controller="Home" asp-action="Index">Home </a><text> | </text>
            <a asp-area="" asp-controller="Home" asp-action="Symbols">Symbols </a><text> | </text>
            <a asp-area="" asp-controller="Home" asp-action="Chart">Chart </a><text> | </text>
            <a asp-area="" asp-controller="Home" asp-action="ComparisonByEquity">Daily Stock </a><text> | </text>
            <a asp-area="" asp-controller="Home" asp-action="ComparisonByDailyEquity">Hourly Stock </a><text> | </text>
            <a asp-area="" asp-controller="Home" asp-action="Trade">Trade </a><text> | </text>
            <a asp-area="" asp-controller="Home" asp-action="Dividend">Dividend </a><text> | </text>
            <a asp-area="" asp-controller="Home" asp-action="About">About </a><text> | </text>
            <a asp-area="" asp-controller="Home" asp-action="Refresh">Refresh </a><text> | </text>
            <a target="_blank" href="https://github.com/mfarokhnia/API_Usage">GitHub </a><text> | </text>



        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>Group 7: ISDS, Muma College of Business, University of South Florida</p>
        </footer>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>